
@{
    ViewData["Title"] = "Index";
}



@if (ViewBag.msg != "")
{
    <script>alert("@ViewBag.msg");</script>
}
<div style="display: inline-block;margin-right:20px">
    <h1>Product List</h1>
</div>
    <p>
        <form>
            <label>Product Name: </label>>&nbsp;
            <input type="text" name="ProductName" placeholder="e.g. Sunflower" />&nbsp;&nbsp;&nbsp;
            <input class="btn-outline-primary" type="submit" name="submit" value="Search Product" />
        </form>
        <br />
    </p>

    @foreach (var productitem in Model)
    {
        <div class="container-fluid padding" style="background-color:lightslategray">
            <div class="row padding">
                <div class="gallery col-lg-4" style="padding-top:20px">
                    <a target="_blank" href="">
                        <img src="@productitem.ProductPicture" alt="@productitem.ProductPicture" width="300" height="180" />
                    </a>
                </div>
                
                <div class="desc col-lg-8" style="padding-top:20px">
                    <h4>@productitem.ProductName</h4>
                    <p><b>Product Name: </b>@productitem.ProductName</p>
                    <p><b>Product price: RM</b>@productitem.ProductPrice</p>
                    <form style="padding-left:70%" asp-action="AddCart" method="post">
                        <input type="hidden" style="width:25%;" value="@ViewBag.UserId" name="UserId"/>
                        <input type="hidden" style="width:25%;" value="@productitem.ProductID" name="ProductId"/>
                        <input type="hidden" style="width:25%;" value="@productitem.ProductPrice" name="TotalPrice"/>
            <input type="number" style="width:25%;" min="0" name="Quantity" placeholder="Qty"/>
            <input class="btn-outline-primary" type="submit" name="submit" value="Add To Cart"/>
        </form>
                </div>
            </div>
        </div>
        
    }