
@{
    ViewData["Title"] = "AddProduct";
}

    <h1>Add New Product</h1>
    <hr />
    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        Product Name:
        <input type="text" name="ProductName" required class="form-control" />
        Product Price: 
        <input type="number" min="0.00" max="10000.00" step="0.01" name="ProductPrice" required class="form-control"/>
        Product Picture:
        <input type="file" name="imageFile" accept="image/*" multiple required class="form-control"/>
        <br/>
        <input type="submit" name="submit" value="Add Product" />
    </form>
